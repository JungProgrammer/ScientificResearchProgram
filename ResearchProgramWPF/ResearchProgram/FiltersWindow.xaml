<Window x:Class="ResearchProgram.FiltersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProgram"
        xmlns:dotNetKitControls="clr-namespace:DotNetKit.Windows.Controls;assembly=DotNetKit.Wpf.AutoCompleteComboBox"
        mc:Ignorable="d"
        Title="Фильтры" Height="650" Width="900">
    <Window.Resources>

        <local:VisibilityConveter x:Key="visibilityConveter" />

        <DataTemplate x:Key="templateForTheContent" DataType="{x:Type local:GrantHeader}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="32"/>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Label Content="{Binding Path=nameOnRussia}"
                                   Grid.Row="0"
                                   Grid.Column="0"
                                   Margin="0 5 0 0"
                                   FontSize="13" Grid.ColumnSpan="3"/>

                <ListView Grid.Row="1"
                                  Grid.ColumnSpan="5"
                                  ItemsSource="{Binding FilterElementsData}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Data}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                
                <!--Если нужен комбобокс-->
                <dotNetKitControls:AutoCompleteComboBox Grid.Row="2"
                                                                Grid.Column="0"
                                                                Margin="10 5 0 5"
                                                                MaxWidth="400"
                                                        Visibility="{Binding Is_combobox_needed, Converter={StaticResource visibilityConveter}}"/>

                
                <!--Если нужен текстбокс-->
                <TextBox Grid.Row="2"
                        Grid.Column="0"
                        Margin="10 5 0 5"
                        MaxWidth="400"
                         Visibility="{Binding Is_textbox_needed, Converter={StaticResource visibilityConveter}}"/>
                
                
                <!--Если нужна дата-->
                <DatePicker Grid.Row="2"
                        Grid.Column="0"
                        Margin="10 5 0 5"
                        MaxWidth="400"
                        Visibility="{Binding Is_date_needed, Converter={StaticResource visibilityConveter}}"/>


                <!--Если мы хотим отфильтровать средства-->
                <StackPanel Grid.Row="2"
                            Grid.Column="0"
                            Orientation="Horizontal"
                            Visibility="{Binding Is_comparison_needed, Converter={StaticResource visibilityConveter}}">
                    <ComboBox  Margin="10 5 0 5"
                                MinWidth="60"/>
                    <TextBox Margin="10 5 0 5"
                                MinWidth="300"/>
                </StackPanel>
                

                <Button Content="Добавить"
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Margin="10 5 0 5"
                                MaxHeight="30"
                                MinWidth="200"
                                MaxWidth="250"
                                HorizontalAlignment="Left"
                                Click="addNewFilterParameter"/>
                <Button Content="Удалить"
                                Grid.Row="2"
                                Grid.Column="2"
                                MaxHeight="30"
                                MinWidth="200"
                                MaxWidth="300"
                                HorizontalAlignment="Right"
                                Margin="0 5 10 5"
                                Click="deleteFilterParameter"/>

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="templateForTheHeader" DataType="{x:Type local:GrantHeader}">
            <TextBlock Text="{Binding Path=nameOnRussia}"/>
        </DataTemplate>

    </Window.Resources>





    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <DockPanel LastChildFill="True"
                   Grid.Row="0"
                   MaxHeight="45">
            <Button DockPanel.Dock="Left" 
                    x:Name="addFilterButton"
                    Content="Добавить фильтр"
                    Margin="10 8 10 8" Click="addFilterButton_Click"
                    />
            <dotNetKitControls:AutoCompleteComboBox DockPanel.Dock="Right" 
                                                    x:Name="filterComboBox"
                                                    ItemsSource="{Binding Path=GrantHeaders}"
                                                    SelectedItem="{Binding Path=SelectedGrantHeader}"
                                                    Margin="5 8 250 8"
                                                    FontSize="13"/>
        </DockPanel>





        <TabControl Grid.Row="1"
                    x:Name="filtersTabControl"
                    ItemsSource="{Binding GrantItemsForControlPanel}"
                    ContentTemplate="{StaticResource templateForTheContent}"
                    ItemTemplate="{StaticResource templateForTheHeader}">
        </TabControl>




