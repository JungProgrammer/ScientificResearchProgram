<Window x:Class="ResearchProgram.Forms.HelpWindows.EditElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProgram.Forms.HelpWindows"
        mc:Ignorable="d"
        Title="EditElementWindow" Height="210" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="130"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Название элемента"
                       Margin="0 0 0 4"
                       FontSize="14"/>

            <TextBox Width="300"
                     Height="30"
                     FontSize="14"
                     Text="{Binding NewNameOfElement}">
            </TextBox>
        </StackPanel>

        <Button Grid.Row="1"
                IsDefault="True"
                Content="Сохранить"
                Width="100"
                Height="25"
                HorizontalAlignment="Right"
                Margin="0 0 10 0" Click="Button_Click"/>
    </Grid>
</Window>
