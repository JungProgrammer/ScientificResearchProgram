        <StackPanel Name="sexStackPanel"
                    Grid.Row="1"
                    Grid.Column="3">
            <RadioButton GroupName="sexRadio"
                         x:Name="sexMan"
                         Content="Мужчина"
                         Checked="RadioButton_Checked"
                         IsChecked="true"/>

            <RadioButton GroupName="sexRadio"
                         x:Name="sexWoman"
                         Content="Женщина"
                         Checked="RadioButton_Checked" />
        </StackPanel>
        <GroupBox Grid.Row="2"
                  Grid.RowSpan="5"
                  Grid.Column="0"
                  Grid.ColumnSpan="100"
                  Header="Место работы"
                  Padding="3">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="255"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>
                    
                    <ListView Grid.Row="0"
