<Window x:Class="ResearchProgram.UniversityStructureCommandWindows.AddTreeNodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResearchProgram.UniversityStructureCommandWindows"
        mc:Ignorable="d"
        Title="Добавление вершины" Height="150" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="{Binding NameStructure}"/>
        <TextBox Name="titleTextBox"
                 Grid.Row="1"
                 MinWidth="250"
                 Text="{Binding StructureTitle}"/>

        <WrapPanel Grid.Row="2"
                   HorizontalAlignment="Right"
                   Margin="0,30,0,0">
            <Button IsDefault="True"
                    Click="Add_Click"
                    MinWidth="60"
                    Margin="0,0,10,0"
                    Content="Добавить">
            </Button>
            <Button IsCancel="True"
                    MinWidth="60"
                    Content="Отмена" Click="Button_Click">
            </Button>
        </WrapPanel>

    </Grid>
</Window>
